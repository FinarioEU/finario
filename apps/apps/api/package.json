{
  "name": "finario-api",
  "version": "1.0.5",
  "private": true,
  "description": "Finario API (NestJS + BullMQ + Stripe + Nodemailer)",
  "type": "module",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "preinstall": "node -e \"console.log('Using .npmrc (legacy-peer-deps), forcing TS via overrides')\"",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "node --loader ts-node/esm src/main.ts"
  },
  "overrides": {
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@nestjs/common": "10.3.9",
    "@nestjs/core": "10.3.9",
    "@nestjs/platform-express": "10.3.9",
    "@nestjs/throttler": "5.2.0",
    "reflect-metadata": "0.1.14",
    "rxjs": "7.8.1",
    "helmet": "7.1.0",
    "express-rate-limit": "7.4.0",
    "cors": "2.8.5",
    "stripe": "14.25.0",
    "nodemailer": "6.9.14",
    "bullmq": "5.8.2",
    "ioredis": "5.4.1",
    "class-validator": "0.14.1",
    "class-transformer": "0.5.1"
  },
  "devDependencies": {
    "typescript": "5.4.5",
    "ts-node": "10.9.2",
    "@nestjs/cli": "10.3.2",
    "@types/node": "20.11.30",
    "@types/express": "4.17.21",
    "@types/nodemailer": "6.4.14"
  }
}